{
  "name": "Bae's Messages",
  "version": "1.0",
  "description": "Keep the bae motivated",
  "options_page" : "Local Pages/options.html",
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "<all_urls>",
    "notifications", "alarms", "activeTab", "declarativeContent", "http://*/*",
    "https://*/*", "storage"],
  "background": {
    "page": "Background/background.html",
    "persistent": true
  },
  "icons": {
    "16": "icons/best_square16.png",
    "32": "icons/best_square32.png",
    "48": "icons/best_square48.png",
    "128": "icons/heart_fingers128.png"
  },
  "page_action": {
    "default_popup": "Background/popup.html"
  },
  "manifest_version": 2
}